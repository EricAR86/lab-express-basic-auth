


<div>
  <h2>Login</h2>

  <form action="/auth/login" method="POST">

    <label> Email
      <input type="email" name="email" placeholder="email@domain.com" />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}
  </form>
</div>